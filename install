#!/bin/bash
git pull

raco pkg install git://github.com/j3parker/desolarized
raco pollen render *.pp

cd ../
FILES=`ls dotfiles/ | grep -v install`
for f in $FILES
do
  if [ ${f: -2} != ".p" ]; then
    echo .$f
    rm -rf ./.$f
    ln -s ./dotfiles/$f ./.$f
  fi
done
source $HOME/.bashrc

# vundle + vim install
rm -rf dotfiles/vim/bundle/vundle
git clone https://github.com/gmarik/vundle dotfiles/vim/bundle/vundle
vim +BundleInstall +qall

# vimproc stuff
# cd $HOME/.vim/bundle/vimproc.vim
# make -f make_unix.mak

# ultisnips extra install steps
mkdir -p $HOME/.vim/ftdetect/
ln -fs $HOME/.vim/bundle/ultisnips/ftdetect/* $HOME/.vim/ftdetect/
rm -rf $HOME/.vim/bundle/ultisnips/UltiSnips
